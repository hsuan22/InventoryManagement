@using InventoryManagement3.Models;
@{
    List<MaterialRequest> material_request_list = ViewBag.material_request_list;
}
@{
    ViewBag.Title = "查詢領料單";
}

<h2>領料單明細</h2>

<table class="table-sheetdetail">
    <thead>
        <tr class="table-header">
            <th>領料單編號</th>
            <th>領料日期</th>
            <th>項次</th>
            <th>零件編號</th>
            <th>領料數量</th>
            <th>領料倉別</th>
            <th>員工編號</th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>

        @foreach (MaterialRequest material_request in material_request_list)
        {
            <tr>
                <td>@material_request.MaterialRequestSN</td>
                <td>@material_request.RequestDTM.ToLongDateString().ToString()</td>
                <td>@material_request.Item</td>
                <td>@material_request.PartID</td>
                <td>@material_request.RequestQty</td>
                <td>@material_request.MoveOutPlaceID</td>
                <td>@material_request.EmployeeID</td>

                <td>
                    @Html.ActionLink("修改", "EditMaterialRequest", new { MaterialRequestSN = material_request.MaterialRequestSN, Item = material_request.Item })
                    |
                    @Html.ActionLink("刪除", "DeleteMaterialRequest", new { MaterialRequestSN = material_request.MaterialRequestSN, Item = material_request.Item })
                </td>

            </tr>
        }

    </tbody>
</table>