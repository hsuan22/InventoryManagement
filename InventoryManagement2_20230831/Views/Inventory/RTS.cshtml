@using InventoryManagement3.Models;
@{
    List<ReturnToStock> RTS_list = ViewBag.RTS_list;
}
@{
    ViewBag.Title = "查詢退料單";
}

<h2>退料單明細</h2>

<table class="table-sheetdetail">
    <thead>
        <tr class="table-header">
            <th>退料單號</th>
            <th>退料日期</th>
            <th>項次</th>
            <th>零件編號</th>
            <th>退料數量</th>
            <th>退料倉別</th>
            <th>員工編號</th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>

        @foreach (ReturnToStock RTSlist in RTS_list)
        {
            <tr>
                <td>@RTSlist.RTSSN</td>
                <td>@RTSlist.RTSDTM.ToLongDateString().ToString()</td>
                <td>@RTSlist.Item</td>
                <td>@RTSlist.PartID</td>
                <td>@RTSlist.RTSQty</td>
                <td>@RTSlist.MoveInPlaceID</td>
                <td>@RTSlist.EmployeeID</td>

                <td>
                    @Html.ActionLink("修改", "EditRTS", new { RTSSN = RTSlist.RTSSN, Item = RTSlist.Item })
                    |
                    @Html.ActionLink("刪除", "DeleteRTS", new { RTSSN = RTSlist.RTSSN, Item = RTSlist.Item })
                </td>
            </tr>
        }

    </tbody>
</table>


